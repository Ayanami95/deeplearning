   "source": [
    "import mxnet as mx\n",
    "from mxnet import nd, autograd, gluon\n",
    "\n",
    "x = nd.array([1., 1., 1.])\n",
    "w = nd.array([1.0, 1.0, -1.5])\n",
    "w.attach_grad()\n",
    "\n",
    "with autograd.record():\n",
    "    loss = -nd.dot(x, w).sigmoid().log()\n",
    "loss.backward()\n",
    "print(loss)\n",
    "print(w.grad)"
   ]
  }
